<main class="main">
  <section class="mt-5 mb-5">
    <div class="container">
      <% if(wishlist.length==0){%>
      <div class="d-flex justify-content-center">
        <img
          src="data:image/png;base64,"
          alt=""
        />

      </div>
      <%} else{%>
      <div class="row">
        <div class="col-12">
          <div class="table-responsive">
            <table class="table shopping-summery text-center">
              <thead>
                <tr class="main-heading">
                  <th scope="col">Product</th>
                  <th scope="col"></th>
                  <th scope="col">Price</th>
                  <th scope="col">Action</th>
                  <th scope="col">Remove</th>
                </tr>
              </thead>
              <tbody>
                <% wishlist.forEach(function(wishlist){%>
                <tr>
                  <td class="image product-thumbnail">
                    <img
                      style="width: 50px"
                      src="<%= wishlist.wishlist.image[0] %>"
                      alt="#"
                    />
                  </td>
                  <td class="product-des product-name">
                    <h5 class="product-name">
                      <a
                        style="color: black; font-size: medium"
                        href="shop-product-right.html"
                      >
                        <%=wishlist.wishlist.productname%>
                      </a>
                    </h5>
                  </td>
                  <td class="price" data-title="Price">
                    <span> <%=wishlist.wishlist.price%></span>
                  </td>

                  <td class="" data-title="Cart">
                    <button
                      style="background-color: #088178; border: none"
                      class="btn btn-dark"
                      onclick="addToCart('<%=wishlist.productId%>')"
                    >
                      Add to cart
                    </button>
                  </td>

                  <td class="action" cartItemss-title="Remove">
                    <button
                      class="btn-dark btn"
                      onclick="removeItem('<%=wishlist.productId%>')"
                    >
                      Remove
                    </button>
                  </td>
                </tr>
                <%}) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <%}%>
    </div>
  </section>
</main>

<script>
  function addToCart(proId) {
    $.ajax({
      url: "/addToCart/" + proId,
      method: "get",
      success: (response) => {
        if (response.update) {
          let cartCount = $("#cartCount").html();
          cartCount = parseInt(cartCount) + 1;
          $("#cartCount").html(cartCount);

          Toastify({
            text: "Added to cart",
            duration: 3000,
            gravity: "bottom", // `top` or `bottom`
            position: "center", // `left`, `center` or `right`
            stopOnFocus: true, // Prevents dismissing of toast on hover
            style: {
              background: "linear-gradient(to right, #00b09b, #96c93d)",
            },
            onClick: function () {}, // Callback after click
          }).showToast();
          removeItemInstant(proId);
        } else {
          Toastify({
            text: "Please login to add cart",
            duration: 3000,
            gravity: "bottom", // `top` or `bottom`
            position: "center", // `left`, `center` or `right`
            stopOnFocus: true, // Prevents dismissing of toast on hover
            style: {
              background: "linear-gradient(to right, #00b09b, #96c93d)",
            },
            onClick: function () {}, // Callback after click
          }).showToast();
        }
      },
    });
  }

  function removeItem(prodId) {
    Swal.fire({
      title: "Are you sure?",
      text: "You won't be able to revert this!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Yes, delete it!",
    }).then((result) => {
      if (result.isConfirmed) {
        $.ajax({
          url: "/remove-wishlist",
          data: {
            productId: prodId,
          },
          method: "DELETE",
          success: (response) => {
            if (response.removeProduct) {
              location.reload();
            }
          },
        });
        Swal.fire(
          "Deleted!",
          "Product is deleted from the wishlist.",
          "success"
        );
      }
    });
  }

  function removeItemInstant(prodId) {
    $.ajax({
      url: "/remove-wishlist",
      data: {
        productId: prodId,
      },
      method: "DELETE",
      success: (response) => {
        if (response.removeProduct) {
          location.reload();
        }
      },
    });
  }
</script>
