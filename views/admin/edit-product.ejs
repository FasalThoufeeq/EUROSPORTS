<body class="vertical-layout vertical-menu 2-columns   menu-expanded fixed-navbar" data-open="click" data-menu="vertical-menu" data-color="bg-chartbg" data-col="2-columns">
<section class="app-content content">
    <div class="container d-flex justify-content-center">
      <div class="row w-75 mt-5">
        <div class="col-md-12">
          <h2 class="text-center">Edit Product</h2>
          <form action="/admin/edit-product/<%=product._id %>" method="POST" enctype="multipart/form-data">
            <label for="">Prodcut Name</label>
            <input type="text" name="productname" class="form-control" value="<%=product.productname%>" />
            <label for="">Description</label>
            <input type="text" name="description" class="form-control" value="<%=product.description%>" />
  
            <label for="">Price</label>
            <input type="text" name="price" class="form-control" value="<%=product.price%>" />
  
            
            <label for="cars">Category</label>
           
            <select class="form- form-control" name="category" id="cars">
              <% categorys.forEach(function(categorys) { %>
              <option value="<%=categorys.category %>"><%=categorys.categoryname %></option>
              <% } )%>
            </select>
          
            <label for="">Quantity</label>
            <input type="text" name="quantity" class="form-control" value="<%=product.quantity%>" />
  
            <label for="">Image</label>
            <img src="<%=product.image[0]%>" alt="" style="width:100px;height:auto" id="imageView">
            <input type="file" name="image" class="form-control" onchange="changeImage(event)" />
  
            <button type="submit" class="btn btn-info mt-4">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </section>
  
  </body>


  <script>
    function changeImage(event){
      document.getElementById('imageView').src=URL.createObjectURL(event.target.files[0])
    }
  </script>